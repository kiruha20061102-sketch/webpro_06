<!Doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>サッカー</title>
</head>
<body>
  <h2>サッカー選手</h2>
  <% if (typeof message !== 'undefined') { %><p style="color: green; font-weight: bold;"><%= message %> </p><% } %>
  <table>
    <tr><th>ID</th><th>名前</th></tr>
      <% let number = 0 %>
      <% for( let row of data ) { %>
        <tr><td><%= row.id %></td>
        <td><a href="/detail/<%= number %>"><%= row.name %></a></td></tr>
        <% number += 1 %>
      <% } %>
  </table>
  <a href="/create">追加</a>
</body>
</html>